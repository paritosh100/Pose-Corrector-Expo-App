{
  "expo": {
    "name": "PoseCorrectionApp",
    "slug": "pose-correction-app",
    "version": "1.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "orientation": "portrait",
    "icon": "./assets/images/pushups.png",
    "splash": {
      "image": "./assets/images/pushups.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": false,
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access your camera"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/pushups.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.CAMERA"
      ],
      "package": "com.anonymous.posecorrectionapp"
    },
    "web": {
      "favicon": "./assets/images/pushups.png"
    },
    "plugins":  [
      "react-native-vision-camera",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.0.21",
            "extraMavenRepos": ["https://jitpack.io"]
          },
          "ios": { "useFrameworks": "static" }
        }
      ]
    ]
  }
}
